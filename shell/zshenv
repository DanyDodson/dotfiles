export BAT_CONFIG_PATH="$HOME/.dotfiles/config/bat/config"

export CURL_HOME="${DOTFILES}/config/curl"
export WGETRC="${DOTFILES}/config/wget/wgetrc"

export OP_BIOMETRIC_UNLOCK_ENABLED=true
