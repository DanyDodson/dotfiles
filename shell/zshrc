#!/usr/bin/env zsh

# Enable Powerlevel10k instant prompt.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# consistent colouring
export CLICOLOR=1

# To customize prompt, run `p10k configure` or edit p10k.zsh.
[[ ! -f ${DOTFILES}/zsh/p10k.zsh ]] || source ${DOTFILES}/zsh/p10k.zsh

# load oh-my-zsh
ZSH_THEME="powerlevel10k/powerlevel10k"

plugins=(
  git
  brew
  zsh-autosuggestions
  zsh-syntax-highlighting
)

fpath+=${ZSH_CUSTOM:-${ZSH:-~/.omz}/custom}/plugins/zsh-completions/src

# Source oh-my-zsh.
source $ZSH/oh-my-zsh.sh

# Source aliases.
if [[ -f "${DOTFILES}/zsh/aliases.zsh" ]]; then
  source ${DOTFILES}/zsh/aliases.zsh
fi

# Source functions.
if [[ -f "${DOTFILES}/zsh/functions.zsh" ]]; then
  source ${DOTFILES}/zsh/functions.zsh
fi

# Source fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# if [[ -f "${HOME}/.iterm.zsh" ]]; then
#   source ${HOME}/.iterm.zsh
# fi

# 
autoload -Uz compinit
if [ $(date +'%j') != $(stat -f '%Sm' -t '%j' ~/.zcompdump) ]; then
  compinit
else
  compinit -C
fi

# after all, set the PATH for macOS
[[ -x /bin/launchctl ]] && /bin/launchctl setenv PATH $PATH
