#!/usr/bin/env zsh

# consistent colouring
export CLICOLOR=1

# load oh-my-zsh
ZSH_THEME="sorin"

plugins=(
  git
  brew
  zsh-autosuggestions
  zsh-syntax-highlighting
)

fpath+=${ZSH_CUSTOM:-${ZSH:-~/.omz}/custom}/plugins/zsh-completions/src

# Source oh-my-zsh.
source $ZSH/oh-my-zsh.sh

# Source aliases.
if [[ -f "${DOTFILES}/zsh/aliases.zsh" ]]; then
  source ${DOTFILES}/zsh/aliases.zsh
fi

# Source functions.
if [[ -f "${DOTFILES}/zsh/functions.zsh" ]]; then
  source ${DOTFILES}/zsh/functions.zsh
fi

# 
autoload -Uz compinit
if [ $(date +'%j') != $(stat -f '%Sm' -t '%j' ~/.zcompdump) ]; then
  compinit
else
  compinit -C
fi

# after all, set the PATH for macOS
[[ -x /bin/launchctl ]] && /bin/launchctl setenv PATH $PATH
